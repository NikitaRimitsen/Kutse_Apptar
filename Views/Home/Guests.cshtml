@model IEnumerable<Kutse_App.Models.Guest>

@{
    ViewBag.Title = "Guests";
}
<div class="jumbotron">
    <h2>Külalised</h2>
</div>
    <p>
        @Html.ActionLink("Loo Uus", "Create", null, new { @class = "btn btn-primary" })
    </p>
	<p>@Html.ActionLink("Tulevad", "Accept", null, new { @class = "btn btn-primary" }) @Html.ActionLink("Loobusid", "NoAccept", null, new { @class = "btn btn-primary" })</p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WillAttend)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WillAttend)
                </td>
                <td>
                    @Html.ActionLink("Muutma", "Edit", new { id = item.Id }) |
                    @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                    @Html.ActionLink("Kustutama", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
