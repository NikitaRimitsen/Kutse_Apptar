@model Kutse_App.Models.Guest

@using (Html.BeginForm())
{
    <div class="jumbotron">
    @Html.ValidationSummary()
    <p id="anketa">Sisesta oma nimi: @Html.TextBoxFor(x => x.Name)</p>
    <p id="anketa">Sisesta oma email: @Html.TextBoxFor(x => x.Email)</p>
    <p id="anketa"> Sisesta oma telefoni: @Html.TextBoxFor(x => x.Phone)</p>
    <p id="anketa">
        Sinu valik:
        @Html.DropDownListFor(x => x.WillAttend,
       new[]
       {
            new SelectListItem(){Text="Tulen kindlasti!", Value=bool.TrueString},
            new SelectListItem(){Text="Kahjuks ei saa tulla", Value=bool.FalseString}
       }, "Vali siit!")
    </p>
    <input type="submit" value="Saada vastus" />
        </div>
}